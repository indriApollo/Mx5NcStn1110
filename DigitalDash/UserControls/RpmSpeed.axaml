<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DigitalDash.UserControls.RpmSpeed">
    <UserControl.Styles>
        <Style Selector="TextBlock.Big">
            <Setter Property="FontSize" Value="100"></Setter>
        </Style>
    </UserControl.Styles>
    <Grid ColumnDefinitions="Auto,250,Auto" RowDefinitions="Auto,Auto" ShowGridLines="True">
        <TextBlock Grid.Row="0" Grid.Column="0">RPM</TextBlock>
        <TextBlock Name="Rpm" Classes="Big" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">0000</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0">Speed</TextBlock>
        <TextBlock Name="Speed" Classes="Big" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">000</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Bottom">Km/h</TextBlock>
    </Grid>
</UserControl>

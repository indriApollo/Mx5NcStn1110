<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DigitalDash.UserControls.WheelSpeeds">
    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto">
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Wheels Km/h</TextBlock>
        <TextBlock Name="Fl" Classes="Number" Grid.Row="1" Grid.Column="0">000</TextBlock>
        <TextBlock Name="Fr" Classes="Number" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">000</TextBlock>
        <TextBlock Name="Rl" Classes="Number" Grid.Row="2" Grid.Column="0">000</TextBlock>
        <TextBlock Name="Rr" Classes="Number" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">000</TextBlock>
    </Grid>
</UserControl>
